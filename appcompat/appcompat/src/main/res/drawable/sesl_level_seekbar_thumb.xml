<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item
                android:gravity="center">
                <shape
                    android:shape="oval">
                    <solid
                        android:color="@color/sesl_thumb_control_fill_color_activated"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/sesl_thumb_disable_seekbar_level"/>
                    <size
                        android:height="20dp"
                        android:width="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:state_enabled="true">
        <layer-list>
            <item
                android:gravity="center"
                android:id="@+id/sesl_level_seekbar_thumb_enabled">
                <shape
                    android:shape="oval">
                    <solid
                        android:color="@color/sesl_thumb_control_fill_color_activated"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/sesl_thumb_control_color_activated"/>
                    <size
                        android:height="20dp"
                        android:width="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>