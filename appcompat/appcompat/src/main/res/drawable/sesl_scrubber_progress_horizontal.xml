<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="fill_horizontal|center"
        android:height="@dimen/sesl_seekbar_track_height"
        android:id="@android:id/background">
        <nine-patch
            android:src="@drawable/sesl_progress_bar"
            android:tint="@color/sesl_seekbar_control_color_default" />
    </item>
    <item
        android:gravity="fill_horizontal|center"
        android:height="@dimen/sesl_seekbar_track_height"
        android:id="@android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <nine-patch
                android:src="@drawable/sesl_progress_bar"
                android:tint="@color/sesl_seekbar_control_color_secondary" />
        </scale>
    </item>
    <item
        android:gravity="fill_horizontal|center"
        android:height="@dimen/sesl_seekbar_track_height"
        android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <nine-patch
                android:src="@drawable/sesl_progress_bar"
                android:tint="@color/sesl_seekbar_control_color_activated" />
        </scale>
    </item>
</layer-list>