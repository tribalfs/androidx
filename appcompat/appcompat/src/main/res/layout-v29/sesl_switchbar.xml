<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.SeslLinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:seslLayoutRoundedCorner="corner_none">

        <LinearLayout
            android:id="@+id/sesl_switchbar_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sesl_switchbar_height"
            android:background="@drawable/sesl_switchbar_background"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sesl_switchbar_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:importantForAccessibility="no"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.SeslSwitchBar" />

            <androidx.appcompat.widget.SeslProgressBar
                android:id="@+id/sesl_switchbar_progress"
                style="@style/Widget.AppCompat.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/sesl_switchbar_progress_margin_right"
                android:visibility="gone" />

            <androidx.appcompat.widget.SeslToggleSwitch
                android:id="@+id/sesl_switchbar_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null" />
        </LinearLayout>
    </androidx.appcompat.widget.SeslLinearLayoutCompat>
</merge>