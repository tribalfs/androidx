<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="android.arch.background.workmanager">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application>
        <provider
            android:name="android.arch.background.workmanager.WorkManagerInitializer"
            android:authorities="${applicationId}.workmanager-trojan"
            android:exported="false"
            android:multiprocess="true" />
        <service
            android:name=".background.systemalarm.SystemAlarmService"
            android:exported="false"
            android:enabled="@bool/enable_system_alarm_service_default" />
        <service
            android:name=".background.systemjob.SystemJobService"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="true"
            android:enabled="@bool/enable_system_job_service_default" />
    </application>
</manifest>
