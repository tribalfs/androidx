<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" package="com.example.androidx.ui">

    <application
            android:label="AndroidX UI sample"
            android:supportsRtl="true" tools:ignore="GoogleAppIndexingWarning"
            android:allowBackup="false" android:icon="@mipmap/ic_launcher">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="androidx.r4a.HelloWorldActivity"
                  android:configChanges="orientation|screenSize"
                  android:label="R4A Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.example.android.ui.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity android:name="androidx.r4a.CraneRectsActivity"
                  android:configChanges="orientation|screenSize"
                  android:label="Crane R4A Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.example.android.ui.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity android:name="androidx.r4a.CraneTextActivity"
            android:configChanges="orientation|screenSize"
            android:label="Crane Text Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.example.android.ui.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity android:name="androidx.ui.material.demos.MainActivity"
                  android:configChanges="orientation|screenSize"
                  android:label="Material demos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.example.android.ui.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity android:name="androidx.r4a.RecomposeTestActivity"
                  android:configChanges="orientation|screenSize"
                  android:label="Recompose test">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.example.android.ui.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity android:name="androidx.r4a.MultipleCollectActivity"
                  android:configChanges="orientation|screenSize"
                  android:label="Multiple collects measure">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.example.android.ui.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity android:name="androidx.r4a.ComplexLayoutActivity"
                  android:configChanges="orientation|screenSize"
                  android:label="Complex layout activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.example.android.ui.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity android:name="androidx.r4a.VectorGraphicsActivity"
                  android:configChanges="orientation|screenSize"
                  android:label="Vector Graphics Activity">
            <!--we currently not support multiple FlutterViews, so lets not recreate activity
                on a rotation as the view will also be recreated-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.example.android.ui.SAMPLE_CODE" />
            </intent-filter>
        </activity>

    </application>
</manifest>
