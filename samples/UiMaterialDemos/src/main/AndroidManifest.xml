<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        package="androidx.ui.material.demos">
    <uses-sdk android:targetSdkVersion="${target-sdk-version}"/>

    <application>
        <activity android:name=".SelectionControlsActivity"
                  android:configChanges="orientation|screenSize"
                  android:label="Material Selection Controls">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="androidx.ui.material.demos.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity android:name=".TextActivity"
                  android:configChanges="orientation|screenSize"
                  android:label="Material Text">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="androidx.ui.material.demos.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity android:name="androidx.ui.material.demos.RippleActivity"
                  android:configChanges="orientation|screenSize"
                  android:label="Ripple Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="androidx.ui.material.demos.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity android:name="androidx.ui.material.demos.ButtonActivity"
            android:configChanges="orientation|screenSize"
            android:label="Button">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="androidx.ui.material.demos.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity android:name="androidx.ui.material.demos.DividersActivity"
            android:configChanges="orientation|screenSize"
            android:label="Dividers">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="androidx.ui.material.demos.SAMPLE_CODE" />
            </intent-filter>
        </activity>
    </application>
</manifest>
