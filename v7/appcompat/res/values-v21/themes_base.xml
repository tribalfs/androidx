    <style name="Base.Theme.AppCompat.Light.DialogWhenLarge" parent="Theme.Platform.AppCompat.Light.DialogWhenLarge">
        <item name="windowActionBar">true</item>

        <item name="android:colorPrimary">?attr/colorPrimary</item>
